@model CommentAddRequest

<div class="form-container">
	<a asp-controller="Home" asp-action="Index" class="link-hover">Back to Poll List</a>
	<h2 class="text-large">Create person</h2>
	<form asp-controller="Home" asp-action="AddComment" method="post">

        <input asp-for="PollId" type="hidden" />

		@*Comment*@
		<div class="form-field flex">
			<div class="w-25">
				<label for="Content" class="form-label pt">Text</label>
			</div>
			<div class="flex-1">
				<div class="flex-1">
					<input asp-for="Content" class="form-input" />
					<span asp-validation-for="Content" class="text-red"></span>
				</div>
			</div>
		</div>

		@*Submit*@
		<div class="form-field flex">
			<div class="w-25">
			</div>
			<div class="flex-1">
				<div class="flex-1">
					<button class="button button-green-back">Send</button>
					<div asp-validation-summary="All" class="text-red"></div>
					@if (ViewBag.Errors != null)
					{
						<div class="text-red ml">
							<ul>
								@foreach (var error in ViewBag.Errors)
								{
									<li class="ml">@error</li>
								}
							</ul>
						</div>
					}
				</div>
			</div>
		</div>
	</form>
</div>